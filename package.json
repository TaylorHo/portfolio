{
	"name": "portfolio",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"postbuild": "node i18n/post-build.cjs",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo '' && pnpm prepare-hooks",
		"prepare-hooks": "if [ -d .git ]; then git config --local core.hooksPath .hooks/; fi",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.7.1",
		"@rehype-pretty/transformers": "^0.13.2",
		"@sveltejs/adapter-vercel": "^6.3.0",
		"@sveltejs/kit": "^2.49.3",
		"@sveltejs/vite-plugin-svelte": "^6.2.2",
		"mdsvex": "^0.12.6",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.1",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-highlight": "^7.0.2",
		"rehype-highlight-code-lines": "^1.2.1",
		"rehype-katex-svelte": "^1.2.0",
		"rehype-slug": "^6.0.0",
		"remark-abbr": "^1.4.2",
		"remark-math": "^3.0.1",
		"remark-toc": "^9.0.0",
		"shiki": "^3.20.0",
		"super-sitemap": "^1.0.6",
		"svelte": "^5.46.1",
		"svelte-check": "^4.3.5",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"core-js",
			"esbuild"
		]
	},
	"dependencies": {
		"@lucide/svelte": "^0.562.0",
		"posthog-js": "^1.315.0"
	},
	"license": "MIT"
}
